{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "types": [
            "sandpack-vue3/global",
            "react",
            "react-dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": ["customComponents/*"]
        }
    },
    "include": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.d.ts",
        ".vitepress/**/*.tsx",
        ".vitepress/**/*.vue",
        "customComponents/**/*.tsx",
        "customComponents/**/*.vue",
        "shims-vue.d.ts"
    ],
    "exclude": ["dist", "node_modules"]
}
